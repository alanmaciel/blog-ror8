<%= form_with(model: post) do |form| %>
  <% if post.errors.any? %>
    <div class="p-4 mb-4 text-red-700 bg-red-100 rounded-lg">
      <h2 class="font-bold mb-2"><%= pluralize(post.errors.count, "error") %> prohibited this post from being saved:</h2>

      <ul class="list-disc list-inside">
        <% post.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-4">
    <%= form.label :title, class: "block text-sm font-medium text-gray-700 mb-1" %>
    <%= form.text_field :title, class: "border shadow-sm block w-full border-gray-300 rounded-md text-xl py-2 px-3 bg-white" %>
  </div>

  <div class="mb-4">
    <%= form.label :body, class: "block text-sm font-medium text-gray-700 mb-1" %>
    <%= form.rich_textarea :body, class: "shadow-sm focus:ring-sky-500 focus:border-sky-500 block w-full border-gray-300 rounded-md bg-white" %>
  </div>
  <div class="flex gap-4 justify-end">
    <%= link_to "Back to posts", posts_path, class: "inline-flex items-center px-4 py-2 border border-gray-300 text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-sky-500" %>
    <%= form.submit class: "hover:cursor-pointer inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-sky-600 hover:bg-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-sky-500" %>
  </div>
<% end %>
