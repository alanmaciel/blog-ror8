 <!-- CARD -->
<div id="<%= dom_id post %>" class="w-full mb-4">
  <section class="mx-auto rounded-lg shadow-md hover:shadow-lg w-full border border-slate-200">
    <!-- CARD CONTENT -->
    <section class="p-4 flex flex-col gap-2">
      <!-- CARD BODY -->
      <section>
        <h2 class="font-medium text-xl leading-snug mb-2 text-slate-600 cursor-pointer hover:underline"><%= link_to post.title, post %></h2>
        <p class="line-clamp-3 text-sm">
          <%= post.updated_at %>
        </p>
      </section>
      <!-- CARD BODY END -->
    </section>
    <!-- CARD CONTENT END -->
  </section>
</div>
<!-- CARD END -->


