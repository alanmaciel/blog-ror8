<%= form_with model: [ post, Comment.new ], class: "mt-4" do |form| %>
  <div class="mb-4">
    <%= form.label :content, "Your comment:", class: "block text-sm font-medium text-gray-700 mb-2" %>
    <%= form.text_area :content, class: "shadow-sm focus:ring-sky-500 focus:border-sky-500 block w-full sm:text-sm border border-gray-300 rounded-md p-2", rows: 5, placeholder: "Type your message..." %>
  </div>
  <%= form.submit "Post Comment", class: "inline-flex justify-center py-2 px-4 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-sky-600 hover:bg-sky-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-sky-500 float-right cursor-pointer" %>
<% end %>
